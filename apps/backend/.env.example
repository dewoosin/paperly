# Environment
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=paperly_db
DB_USER=paperly_user
DB_PASSWORD=paperly_dev_password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration
# Option 1: Gmail SMTP (recommended for testing)
# 1. Enable 2-factor authentication in your Google account
# 2. Generate an "App Password" for this application
# 3. Use your Gmail address and the app password below
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Paperly

# Option 2: Ethereal Email (fake SMTP for testing)
# SMTP_HOST=smtp.ethereal.email
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-ethereal-email@ethereal.email
# SMTP_PASS=your-ethereal-password
# EMAIL_FROM=noreply@paperly.ai
# EMAIL_FROM_NAME=Paperly

# Client URL for email links
CLIENT_URL=http://localhost:3001

# OpenAI (나중에 추가)
# OPENAI_API_KEY=your-openai-api-key
